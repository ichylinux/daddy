<%= fields_for 'career[career_details_attributes]', career_detail, :index => index do |f| %>
  <tr>
    <td><%= f.text_field :project_name %></td>
    <td><%= f.text_field :start_date, :class => 'datepicker' %></td>
    <td><%= f.text_field :end_date, :class => 'datepicker' %></td>
    <td>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
      <a href="#" onclick="delete_career_detail(this); return false;">削除</a>
      <script>
        $(document).ready(function() {
          $('.datepicker').css({'width': '6em', 'text-align': 'center'}).datepicker();
        });

        function delete_career_detail(link) {
          var tr = $(link).closest('tr');
          tr.find('input[name*="_destroy"]').val(true);
          tr.hide();
        }
      </script>
    </td>
  </tr>
<% end %>
